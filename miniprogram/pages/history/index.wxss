page {
  background-color: var(--bg-color);
  padding: 30rpx;
  box-sizing: border-box;
}

.history-list {
  display: flex;
  flex-direction: column;
}

.history-item {
  background: #fff;
  border-radius: var(--radius-md);
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-time {
  font-size: 28rpx;
  color: var(--text-secondary);
}

.item-score {
  font-size: 40rpx;
  font-weight: bold;
  font-family: 'DIN Alternate';
}
.item-score.pass {
  color: var(--primary-color);
}
.item-score.fail {
  color: var(--error-color);
}

.item-detail {
  font-size: 26rpx;
  color: var(--text-secondary);
  display: flex;
  align-items: center;
  background: #F5F7FA;
  padding: 16rpx;
  border-radius: 8rpx;
}

.divider {
  margin: 0 16rpx;
  color: #DCDFE6;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.3;
  filter: grayscale(100%);
}

.empty-text {
  font-size: 30rpx;
  color: var(--text-placeholder);
  margin-bottom: 60rpx;
}

.go-btn {
  background-color: var(--primary-color);
  color: #fff;
  padding: 20rpx 80rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}
