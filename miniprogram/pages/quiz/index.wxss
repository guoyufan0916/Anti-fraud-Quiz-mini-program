page {
  background-color: var(--bg-color);
  padding: 30rpx;
  box-sizing: border-box;
}

.quiz-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}
.progress-box {
  flex: 1;
  margin-right: 30rpx;
}
.progress-text {
  font-size: 24rpx;
  color: var(--text-secondary);
  margin-bottom: 10rpx;
}
.progress-bg {
  height: 12rpx;
  background-color: #E6E8EB;
  border-radius: 6rpx;
  overflow: hidden;
}
.progress-bar {
  height: 100%;
  background: linear-gradient(90deg, #40A9FF 0%, #1890FF 100%);
  border-radius: 6rpx;
  transition: width 0.3s ease;
}

.timer-box {
  background: #E6F7FF;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  color: var(--primary-color);
  font-weight: bold;
  font-size: 28rpx;
}
.timer-box icon {
  margin-right: 8rpx;
}
.timer-box.urgent {
  background: #FFF1F0;
  color: var(--error-color);
  animation: pulse 1s infinite;
}

@keyframes pulse {
  0% { transform: scale(1); }
  50% { transform: scale(1.05); }
  100% { transform: scale(1); }
}

.question-card {
  background: #fff;
  border-radius: var(--radius-md);
  padding: 40rpx;
  box-shadow: var(--shadow-md);
  margin-bottom: 40rpx;
  position: relative;
}
.q-type-tag {
  display: inline-block;
  background: var(--primary-color);
  color: #fff;
  font-size: 22rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx 0 8rpx 0;
  position: absolute;
  top: 0;
  left: 0;
}
.q-text {
  font-size: 34rpx;
  color: var(--text-main);
  line-height: 1.6;
  font-weight: 600;
  margin-top: 10rpx;
}

.option-item {
  background: #fff;
  border-radius: var(--radius-md);
  padding: 30rpx;
  margin-bottom: 24rpx;
  display: flex;
  align-items: center;
  border: 2rpx solid transparent;
  transition: all 0.2s;
  box-shadow: var(--shadow-sm);
}
.option-item:active {
  transform: scale(0.99);
}
.option-item.selected {
  border-color: var(--primary-color);
  background-color: #E6F7FF;
}

.option-icon {
  width: 60rpx;
  height: 60rpx;
  background: #F5F7FA;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-weight: bold;
  color: var(--text-secondary);
  margin-right: 24rpx;
  flex-shrink: 0;
}
.option-item.selected .option-icon {
  background: var(--primary-color);
  color: #fff;
}
.option-content {
  flex: 1;
  font-size: 30rpx;
  color: var(--text-main);
}
.check-icon {
  color: var(--primary-color);
  font-weight: bold;
}

.next-btn {
  background: var(--primary-color) !important;
  color: #fff !important;
  border-radius: 50rpx;
  margin-top: 60rpx;
  box-shadow: 0 8rpx 20rpx rgba(24, 144, 255, 0.3);
}
.next-btn.disabled {
  background: #D9D9D9 !important;
  box-shadow: none;
  color: #fff !important;
}
