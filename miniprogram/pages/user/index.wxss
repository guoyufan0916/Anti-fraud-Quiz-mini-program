page {
  background-color: var(--bg-color);
}
.user-container {
  min-height: 100vh;
  position: relative;
  padding-bottom: 40rpx;
}

.header-bg {
  height: 300rpx;
  background: linear-gradient(135deg, var(--primary-gradient-start) 0%, var(--primary-gradient-end) 100%);
  border-bottom-left-radius: 40rpx;
  border-bottom-right-radius: 40rpx;
}

.user-card {
  background: #fff;
  margin: -200rpx 30rpx 30rpx;
  border-radius: var(--radius-md);
  padding: 40rpx;
  box-shadow: var(--shadow-md);
  position: relative;
  z-index: 10;
}

.user-info-row {
  display: flex;
  align-items: center;
  margin-bottom: 50rpx;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
  border: 4rpx solid #fff;
  box-shadow: var(--shadow-sm);
  margin-right: 30rpx;
  background-color: #f5f5f5;
}

.info-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.nickname-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.nickname {
  font-size: 38rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-right: 16rpx;
}

.level-tag {
  background: linear-gradient(90deg, #FFC53D 0%, #FA8C16 100%);
  color: #fff;
  font-size: 20rpx;
  padding: 2rpx 12rpx;
  border-radius: 20rpx;
  font-weight: bold;
  font-style: italic;
}

.user-desc {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.checkin-btn {
  background: var(--primary-color);
  color: #fff;
  font-size: 26rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(24, 144, 255, 0.3);
}
.checkin-btn.disabled {
  background: #E8E8E8;
  color: #999;
  box-shadow: none;
}

.stats-row {
  display: flex;
  justify-content: space-around;
  padding-top: 20rpx;
  border-top: 1px solid #f5f5f5;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.stat-num {
  font-size: 44rpx;
  font-weight: bold;
  color: var(--text-main);
  margin-bottom: 8rpx;
  font-family: 'DIN Alternate', sans-serif;
}

.stat-label {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.section-card {
  background: #fff;
  margin: 0 30rpx 24rpx;
  border-radius: var(--radius-md);
  padding: 30rpx;
  box-shadow: var(--shadow-sm);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: var(--text-main);
}

.card-more {
  font-size: 24rpx;
  color: var(--text-secondary);
}

.badge-scroll {
  display: flex;
  overflow-x: auto;
  padding-bottom: 10rpx;
}

.badge-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 40rpx;
  min-width: 120rpx;
}

.badge-icon-box {
  width: 100rpx;
  height: 100rpx;
  background: #F0F5FF;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 16rpx;
  border: 4rpx solid #F0F5FF;
}

.badge-item.locked .badge-icon-box {
  background: #F5F5F5;
  border-color: #F5F5F5;
  filter: grayscale(100%);
}

.badge-icon {
  width: 56rpx;
  height: 56rpx;
}

.badge-name {
  font-size: 24rpx;
  color: var(--text-main);
}
.badge-item.locked .badge-name {
  color: #999;
}

.menu-list {
  background: #fff;
  margin: 0 30rpx 40rpx;
  border-radius: var(--radius-md);
  padding: 10rpx 30rpx;
  box-shadow: var(--shadow-sm);
}

.menu-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 0;
  border-bottom: 1px solid #f9f9f9;
  background: transparent;
  width: 100%;
  font-weight: normal;
  margin: 0;
  box-sizing: border-box;
  line-height: normal;
  border-radius: 0;
}
.menu-item::after {
  border: none;
}
.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  color: var(--text-main);
}

.menu-icon-box {
  width: 64rpx;
  height: 64rpx;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 24rpx;
}

.menu-icon {
  width: 36rpx;
  height: 36rpx;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

.footer-info {
  text-align: center;
  color: #ccc;
  font-size: 24rpx;
  margin-bottom: 20rpx;
}
