page {
  background-color: var(--bg-color);
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.search-bar {
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.search-input {
  background-color: #F5F7FA;
  height: 72rpx;
  border-radius: 36rpx;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  color: #909399;
  font-size: 28rpx;
}
.search-input icon {
  margin-right: 16rpx;
}

.tabs {
  display: flex;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 1px solid #EBEEF5;
}
.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 30rpx;
  color: #606266;
  position: relative;
  font-weight: 500;
}
.tab-item.active {
  color: var(--primary-color);
  font-weight: bold;
}
.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 6rpx;
  background-color: var(--primary-color);
  border-radius: 3rpx;
}

.content-scroll {
  flex: 1;
  padding: 30rpx;
  box-sizing: border-box;
}

/* 知识卡片 */
.knowledge-card {
  background: #fff;
  border-radius: var(--radius-md);
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow-sm);
  transition: transform 0.2s;
}
.knowledge-card:active {
  transform: scale(0.99);
}
.k-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.k-title {
  font-size: 32rpx;
  font-weight: bold;
  color: var(--text-main);
}
.k-tag {
  background-color: #E6F7FF;
  color: var(--primary-color);
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}
.k-desc {
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.k-footer {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #909399;
}
.stars {
  color: var(--secondary-color);
  margin-left: 10rpx;
}

/* 案例卡片 */
.case-card {
  background: #fff;
  border-radius: var(--radius-md);
  overflow: hidden;
  margin-bottom: 30rpx;
  box-shadow: var(--shadow-md);
}
.case-header {
  background: linear-gradient(90deg, #FF7875 0%, #FF4D4F 100%);
  padding: 24rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #fff;
}
.case-title {
  font-size: 30rpx;
  font-weight: bold;
}
.case-amount {
  font-size: 24rpx;
  background: rgba(255,255,255,0.2);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}
.case-content {
  padding: 30rpx;
}
.case-row {
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: var(--text-main);
  line-height: 1.5;
}
.case-row .label {
  color: var(--text-secondary);
  font-weight: bold;
}
.case-row .desc {
  color: #606266;
}
.case-alert {
  background-color: #FFF1F0;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #FF4D4F;
}
.case-alert icon {
  margin-right: 12rpx;
}
